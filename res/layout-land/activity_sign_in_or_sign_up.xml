<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" >

        <LinearLayout
            android:id="@+id/layout_email_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            
            android:layout_marginTop="30dp"
            android:background="#dfe0e2"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="#FFF" >
                  <ImageView
                     android:id="@+id/imageView1"
                     android:layout_width="50dp"
                     android:layout_height="40dp"
                     android:scaleType="fitCenter"
                     android:padding="6dp"
                     android:src="@drawable/icn_email" />

                <EditText
                    android:id="@+id/txt_Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/txtbox_background"
                    android:hint="@string/lbl_Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="4dp"
                    android:paddingRight="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" 
                android:background="#FFF">
                
                 <ImageView
                     android:id="@+id/imageView2"
                     android:layout_width="50dp"
                     android:layout_height="40dp"
                     android:padding="1dp"
                     android:scaleType="centerInside"
                     android:src="@drawable/icn_key" />

                <EditText
                    android:id="@+id/txt_Password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/txtbox_background"
                    android:hint="@string/lbl_Password"
                    android:inputType="textPassword"
                    android:paddingLeft="4dp"
                    android:paddingRight="2dp" >

                    
                </EditText>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_SignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/layout_email_pass"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_background1"
            android:minHeight="40dip"
            android:text="@string/btn_SignIn"
            android:textColor="@drawable/btn_color1" />

        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
            android:layout_below="@+id/lbl_Or"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_background1"
            android:minHeight="40dip"
            android:text="@string/btn_SignUp"
            android:textColor="@drawable/btn_color1" />

        <TextView
            android:id="@+id/lbl_Or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_SignIn"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/lbl_Or"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/line_LeftHorizonatl"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/btn_SignIn"
            android:layout_alignTop="@+id/lbl_Or"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/lbl_Or"
            android:background="#aaa" />

        <View
            android:id="@+id/Line_RightHorizontal"
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:layout_alignRight="@+id/btn_SignUp"
            android:layout_alignTop="@+id/lbl_Or"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/lbl_Or"
            android:background="#aaa" />
        
        <View
            android:id="@+id/view_hidden"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/btn_SignUp"
             />
        
    </RelativeLayout>

</ScrollView>