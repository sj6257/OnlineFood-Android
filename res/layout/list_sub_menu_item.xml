<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dp" >

    <TextView
        android:id="@+id/lbl_itemName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dip"
        android:gravity="left|center_vertical"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/icn_arrow"
        android:layout_width="18dip"
        android:layout_height="18dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip"
        android:contentDescription="@string/img_cnt_desc_arrow"
        android:src="@drawable/arrowright" />

    <LinearLayout
        android:layout_width="50dip"
        android:layout_height="34dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@id/icn_arrow"
        android:background="#ab8534"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icn_rupee"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:contentDescription="@string/img_cnt_desc_ruppee"
            android:scaleType="fitXY"
            android:src="@drawable/icn_rupee" />

        <TextView
            android:id="@+id/lbl_itemCost"
            android:layout_width="0dp"
            android:layout_height="20dip"
             android:layout_marginRight="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFF" />
    </LinearLayout>

</RelativeLayout>