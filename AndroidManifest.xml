<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamXDev.onlineordering"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icn_shopping_cart"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.teamXDev.onlineordering.Home"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.SignInOrSignUp"
            android:label="@string/title_activity_sign_in_or_sign_up"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.SignUp"
            android:label="@string/title_activity_sign_up"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.AccountDetails"
            android:label="@string/title_activity_account_details"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.LocationAndHours"
            android:label="@string/title_activity_location_and_hours" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.AboutNiteFoodie"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.ExpandableListMenu"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.ListSubMenu"
            android:label="@string/title_activity_list_sub_menu" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.ItemDetails"
            android:label="@string/title_activity_item_details"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.PastOrder"
            android:label="@string/title_activity_past_order" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.FinalOrder"
           
            android:label="@string/title_activity_final_order"
		    android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.teamXDev.onlineordering.PlaceOrder"
            android:label="@string/title_activity_place_order"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>